# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        markup = "pango"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = "<span size='small'> %quality at %essid </span>"
        format_down = "<span size='small'> no wifi</span>"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "<span size='small'> %ip, %speed </span>"
        format_down = "<span size='small'> no ethernet</span>"
}

battery 0 {
        last_full_capacity = true
        format = "<span size='small'>  %percentage</span>"
        threshold_type = percentage
        low_threshold = 1
}

battery 1 {
        last_full_capacity = true
        format = "<span size='small'>  %percentage</span>"
        threshold_type = percentage
        low_threshold = 1
}

tztime local {
        format = "<span size='small'>%time</span>"
        format_time = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "<span size='small'>%1min</span>"
}

disk "/" {
        format = "<span size='small'>%avail"
}