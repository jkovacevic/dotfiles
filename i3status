# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        markup = "pango"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
order += "battery 0"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "<span size='small'>[W: %quality at %essid]</span>"
        format_down = "<span size='small'>[W: down]</span>"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "<span size='small'>[E: %ip %speed]</span>"
        format_down = "<span size='small'>[E: down]</span>"
}

battery 0 {
        last_full_capacity = true
        format = "<span size='small'>%status %percentage</span>"
}

battery 1 {
        last_full_capacity = true
        format = "<span size='small'>%status %percentage</span>"
}

tztime local {
        format = "<span size='small'>%time</span>"
        format_time = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "<span size='small'>%1min</span>"
}

disk "/" {
        format = "<span size='small'>%avail"
}

volume master {
        format = "<span size='small'>VOL %volume</span>"
        format_muted = "<span size='small'>VOL MUTE</span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}