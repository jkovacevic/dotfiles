{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/save-prompt-history.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-send -t 60000 -h \"string:x-dunst-stack-tag:claude-$(tmux display-message -p -t \"$TMUX_PANE\" '#W')\" 'Claude Code' \"Response complete - $(tmux display-message -p -t \"$TMUX_PANE\" '#W')\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send -t 60000 -h \"string:x-dunst-stack-tag:claude-$(tmux display-message -p -t \"$TMUX_PANE\" '#W')\" 'Claude Code' \"Permission required - $(tmux display-message -p -t \"$TMUX_PANE\" '#W')\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/home/jk/dotfiles/claude/statusline.sh"
  }
}
